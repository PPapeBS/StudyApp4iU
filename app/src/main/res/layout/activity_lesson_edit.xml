<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LessonEdit">


    <LinearLayout
        android:layout_width="398dp"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name_Menu"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/headlineLesson"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:text="@string/headlineLessonEdit"
                android:textSize="17sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/iubhlogounterschrift" />
    </LinearLayout>


    <!--Kursübersicht-->
    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editLesson1"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#00BCD4"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="TEMP:No.: 4"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:inputType="numberDecimal"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editLesson2"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#00BCD4"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:text="TEMP:Titel: Das Wesen der Wissenschaft"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="17sp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editLesson3"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#00BCD4"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:text="TEMP: Zeit in Sekunden"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="23sp"        />

<!--
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editLesson4"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#00BCD4"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:text="TEMP:Zeit gesetzt"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="23sp"        />
-->
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />

    <TextView
        android:id="@+id/editLesson5"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#00BCD4"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:text="TEMP: Zugehöriger Kurs"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="23sp"        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />

    <!--Kursauswahl-->
    <Spinner
        android:id="@+id/spinnerSelectCourse"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#009688"
        android:clickable="true"
        android:fontFamily="monospace"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />

    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/deleteLesson"
            android:layout_width="203dp"
            android:layout_height="92dp"
            android:backgroundTint="#EC407A"
            android:fontFamily="monospace"
            android:onClick="onClickDeleteLesson"
            android:text="@string/buttonDeletLessons"
            android:textSize="17sp" />


        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:text="" />

        <Button
            android:id="@+id/changeLesson"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:backgroundTint="#FFCA28"
            android:fontFamily="monospace"
            android:onClick="onClickChangeLesson"
            android:text="@string/buttonChangeLessons"
            android:textSize="17sp" />


    </LinearLayout>




</LinearLayout>