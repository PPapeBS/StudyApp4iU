<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LessonInfo">


    <LinearLayout
        android:layout_width="398dp"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name_Menu"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/headlineLesson"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:text="@string/headlineLessonInfo"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/iubhlogounterschrift" />
    </LinearLayout>


    <!--Kursübersicht-->
    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/textViewLesson1"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#00BCD4"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="TEMP:Nr.: 1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />
    <TextView
        android:id="@+id/textViewLesson2"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#00BCD4"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:text="TEMP:Titel: Was habe ich hier gelernt"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="17sp"        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />


    <TextView
        android:id="@+id/textViewLesson3"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#00BCD4"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:text="TEMP:Zeit in Sekunden"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="23sp"    />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="" />

        <TextView
            android:id="@+id/textViewLesson4"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="#00BCD4"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:text="TEMP:Zeit gesetzt?"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="23sp"        />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="" />

    <TextView
        android:id="@+id/textViewLesson5"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:background="#00BCD4"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="TEMP:Kurse zugehörig"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="" />


    </LinearLayout>